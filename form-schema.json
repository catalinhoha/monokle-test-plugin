{
  "type": "object",
  "required": ["minecraftServer", "persistance"],
  "properties": {
    "minecraftServer": {
      "required": ["eula", "version"],
      "type": "object",
      "properties": {
        "eula": {
          "type": "boolean"
        },
        "version": {
          "type": "string",
          "default": "LATEST"
        },
        "maxPlayers": {
          "type": "number",
          "format": "integer",
          "default": 20
        }
      }
    },
    "persistance": {
      "type": "object",
      "properties": {
        "dataDir": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    }
  }
}
